---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Thank You">
    <section class="py-24 bg-gradient-to-br from-blue-100 to-neutral-50">
        <div class="container mx-auto px-8 text-center">
            <div class="inline-block bg-secondary-500 text-white rounded-full p-4 mb-6">
                <span class="material-symbols-outlined text-4xl">mark_email_read</span>
            </div>
            <h1 class="text-4xl font-bold text-primary-700 mb-4">Thank You!</h1>
            <p class="text-xl text-gray-700 mb-8 max-w-lg mx-auto">
                Your message has been sent successfully. We appreciate you contacting us and will get back to you shortly.
            </p>
            <a href="/" class="bg-primary-600 hover:bg-primary-700 text-white px-6 py-3 rounded-full font-medium transition-colors duration-300 inline-flex items-center group">
                <span class="material-symbols-outlined mr-2 group-hover:-translate-x-1 transition-transform duration-300">arrow_back</span>
                Return to Homepage
            </a>
        </div>
    </section>
</Layout>
