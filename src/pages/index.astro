---
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
import ParallaxSection from "../components/ParallaxSection.astro";

import { Image } from "astro:assets";
import tradeWindsLogo from "../assets/tradewinds_logo_transparent.png";
import shelvingImage from "../assets/Shelving.png";
import trolleyImage from "../assets/Medical Trolleys.png";
import curtainTracks from "../assets/Curtain rails and tracks.png";
import customBuildImage from "../assets/Refurbishments.png";
import dnaImage from "../assets/DNA image.jpg";
---

<Layout title="Home">
    <section
        class="relative pt-16 pb-[150px] flex flex-col justify-between md:h-[90dvh] min-h-[600px] bg-gradient-to-br from-blue-200 to-neutral-50 overflow-x-hidden"
    >
        <!-- Add a subtle red decorative element -->
        <div
            class="absolute top-0 right-0 w-24 h-24 bg-secondary-500 rounded-full opacity-20 -translate-y-1/3 translate-x-1/4"
        >
        </div>

        <div class="relative h-full z-10 flex flex-col md:flex-row px-8">
            <div class="md:w-1/2 mb-12 md:mb-0 flex flex-col justify-center">
                <h1
                    class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-6"
                >
                    <span class="block">The answer is</span>
                    <span class="text-primary-600 relative">
                        YES <span
                            class="absolute -bottom-2 left-0 w-full h-1 bg-primary-500"
                        ></span>
                    </span>
                    <span class="block mt-2"
                        >How can we help <span class="text-secondary-600"
                            >you?</span
                        ></span
                    >
                </h1>
                <p class="text-gray-700 text-xl mb-8 md:max-w-lg">
                    Your premier medical equipment provider delivering
                    innovative solutions to hospitals and healthcare facilities.
                    Let&#x27;s transform your medical space together.
                </p>
                <div
                    class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4"
                >
                    <Button href="#" size="md"> Explore Products </Button>
                    <!-- Update to use new secondary color -->
                    <Button href="#" variant="secondary">
                        Request Consultation
                    </Button>
                </div>
            </div>
            <div class="md:w-1/2 relative flex flex-col justify-center">
                <div
                    class="relative w-full h-[400px] rounded-lg overflow-hidden shadow-2xl transform md:rotate-2 hover:rotate-0 transition-all duration-500"
                >
                    <Image
                        src={tradeWindsLogo}
                        alt="Tradewinds Logo"
                        class="w-full h-full object-cover"
                    />
                    <div
                        class="absolute inset-0 bg-gradient-to-t from-primary-600/70 via-transparent to-transparent"
                    >
                    </div>
                    <div class="absolute bottom-0 left-0 p-6 text-white">
                        <p class="text-2xl font-bold">
                            Proud Sole Distributors of Tradewinds
                        </p>
                        <p class="opacity-90">
                            Bringing you exclusive access to top-tier medical
                            equipment.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <ParallaxSection
    imageUrl={dnaImage.src}
    overlayColor="bg-primary-700"
    overlayOpacity={0.7}
    class="py-32"
    >
        <!-- About Us Snippet Section using Parallax -->
        <div class="container mx-auto max-w-3xl mb-36">
            <div
                class="bg-neutral-50 rounded-xl shadow-2xl p-8 md:p-12 text-center transform hover:scale-[1.02] transition-transform duration-500"
            >
                <h2 class="text-3xl md:text-4xl font-bold mb-6 text-gray-800">
                    About <span class="text-primary-600">MICS</span>
                </h2>
                <p class="text-lg text-gray-700 mb-8 max-w-2xl mx-auto">
                    With over two decades of specialized experience, Medical
                    Infection Control Solutions (MICS) provides niche medical
                    equipment, accessories, and expert technical support. We
                    pride ourselves on integrity, local knowledge, and
                    understanding the unique needs of the healthcare industry.
                </p>
                <Button href="/mics-website/about" variant="primary">
                    Learn More About Us
                </Button>
            </div>
        </div>

        <!-- Product Category section -->
        <div class="bg-neutral-50 rounded-md shadow-md p-10">
            <div class="text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">
                    Our <span class="text-secondary-600">Product</span> Categories
                </h2>
                <p class="max-w-2xl mx-auto">
                    We specialize in providing top-tier medical equipment solutions
                    designed to enhance efficiency, comfort, and care in healthcare
                    environments.
                </p>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                <div
                    class="bg-white rounded-xl shadow-lg overflow-hidden group hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2"
                >
                    <div class="h-80 overflow-hidden relative">
                        <Image
                            src={shelvingImage}
                            alt="Medical Shelving"
                            class="w-full h-full object-cover group-hover:scale-110 transition-all duration-500"
                        />
                        <div
                            class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300"
                        >
                        </div>
                        <div
                            class="absolute bottom-0 left-0 p-4 text-white transform translate-y-full group-hover:translate-y-0 transition-all duration-300"
                        >
                            <p class="font-medium">
                                Explore our versatile shelving options designed for
                                medical storage needs.
                            </p>
                        </div>
                    </div>
                    <div class="p-6">
                        <div class="flex items-center mb-4">
                            <span
                                class="material-symbols-outlined text-primary-500 mr-2"
                                >shelves</span
                            >
                            <h3 class="text-xl font-bold text-gray-500">
                                Medical Shelving
                            </h3>
                        </div>
                        <p class="text-gray-600 mb-4">
                            Space-efficient storage solutions engineered for
                            healthcare environments, ensuring organization and
                            accessibility.
                        </p>
                        <a href="/mics-website/products?category=medical-shelving"
                            class="text-primary-600 font-medium flex items-center group-hover:text-primary-700"
                        >
                            Learn More <span
                                class="material-symbols-outlined ml-1 transform group-hover:translate-x-1 transition-transform duration-300"
                                >arrow_forward</span
                            >
                        </a>
                    </div>
                </div>
                <div
                    class="bg-white rounded-xl shadow-lg overflow-hidden group hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2"
                >
                    <div class="h-80 overflow-hidden relative">
                        <Image
                            src={trolleyImage}
                            alt="Packing Table"
                            class="w-full h-full object-cover group-hover:scale-110 transition-all duration-500"
                        />
                        <div
                            class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300"
                        >
                        </div>
                        <div
                            class="absolute bottom-0 left-0 p-4 text-white transform translate-y-full group-hover:translate-y-0 transition-all duration-300"
                        >
                            <p class="font-medium">
                                Discover our range of medical trolleys designed for
                                mobility and functionality.
                            </p>
                        </div>
                    </div>
                    <div class="p-6">
                        <div class="flex items-center mb-4">
                            <span
                                class="material-symbols-outlined text-primary-500 mr-2"
                                >luggage</span
                            >
                            <h3 class="text-xl font-bold text-gray-500">
                                Medical Trolleys
                            </h3>
                        </div>
                        <p class="text-gray-600 mb-4">
                            Mobile carts and trolleys that streamline workflows,
                            making patient care more efficient and accessible.
                        </p>
                        <a href="/mics-website/products?category=medical-trolleys"
                            class="text-primary-600 font-medium flex items-center group-hover:text-primary-700"
                        >
                            Learn More <span
                                class="material-symbols-outlined ml-1 transform group-hover:translate-x-1 transition-transform duration-300"
                                >arrow_forward</span
                            >
                        </a>
                    </div>
                </div>
                <div
                    class="bg-white rounded-xl shadow-lg overflow-hidden group hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2"
                >
                    <div class="h-80 overflow-hidden relative">
                        <Image
                            src={curtainTracks}
                            alt="Curtains & Tracks"
                            class="w-full h-full object-cover group-hover:scale-110 transition-all duration-500"
                        />
                        <div
                            class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300"
                        >
                        </div>
                        <div
                            class="absolute bottom-0 left-0 p-4 text-white transform translate-y-full group-hover:translate-y-0 transition-all duration-300"
                        >
                            <p class="font-medium">
                                Privacy solutions with our specialized curtains and
                                track systems.
                            </p>
                        </div>
                    </div>
                    <div class="p-6">
                        <div class="flex items-center mb-4">
                            <span
                                class="material-symbols-outlined text-primary-500 mr-2"
                                >curtains</span
                            >
                            <h3 class="text-xl font-bold text-gray-500">
                                Curtains &amp; Tracks
                            </h3>
                        </div>
                        <p class="text-gray-600 mb-4">
                            Privacy and infection control solutions with
                            antimicrobial curtains and smooth-gliding track systems.
                        </p>
                        <a href="/mics-website/products?category=curtains-and-tracks"
                            class="text-primary-600 font-medium flex items-center group-hover:text-primary-700"
                        >
                            Learn More <span
                                class="material-symbols-outlined ml-1 transform group-hover:translate-x-1 transition-transform duration-300"
                                >arrow_forward</span
                            >
                        </a>
                    </div>
                </div>
                <div
                    class="bg-white rounded-xl shadow-lg overflow-hidden group hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2"
                >
                    <!-- Add a red highlight to one product card -->
                    <div class="h-80 overflow-hidden relative">
                        <div
                            class="absolute top-0 right-0 bg-secondary-500 text-white px-3 py-1 z-10 rounded-bl-lg font-medium"
                        >
                            Featured
                        </div>
                        <Image
                            src={customBuildImage}
                            alt="Custom Build Accessories"
                            class="w-full h-full object-cover group-hover:scale-110 transition-all duration-500"
                        />
                        <div
                            class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300"
                        >
                        </div>
                        <div
                            class="absolute bottom-0 left-0 p-4 text-white transform translate-y-full group-hover:translate-y-0 transition-all duration-300"
                        >
                            <p class="font-medium">
                                Tailored solutions for your specific healthcare
                                facility needs.
                            </p>
                        </div>
                    </div>
                    <div class="p-6">
                        <div class="flex items-center mb-4">
                            <span
                                class="material-symbols-outlined text-primary-500 mr-2"
                                >settings_suggest</span
                            >
                            <h3 class="text-xl font-bold text-gray-500">
                                Custom Solutions
                            </h3>
                        </div>
                        <p class="text-gray-600 mb-4">
                            Bespoke equipment and refurbishment services designed to
                            meet your hospital&#x27;s unique requirements.
                        </p>
                        <a href="/mics-website/products?category=custom-solutions"
                            class="text-primary-600 font-medium flex items-center group-hover:text-primary-700"
                        >
                            Learn More <span
                                class="material-symbols-outlined ml-1 transform group-hover:translate-x-1 transition-transform duration-300"
                                >arrow_forward</span
                            >
                        </a>
                    </div>
                </div>
            </div>
            <div class="mt-16 text-center">
                <Button variant="secondary" href="/mics-website/products"> View All Products </Button>
            </div>
        </div>
    </ParallaxSection>

    <!-- Supplier banner -->
    <section
        class="relative bg-neutral-50 py-6 px-8 shadow-md transform translate-y-1"
    >
        <div class="relative flex flex-col items-center justify-center gap-10">
            <!-- Subtle decorative elements -->
            <div
                class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none"
            >
                <!-- Subtle dots pattern -->
                <div
                    class="absolute inset-0 bg-[radial-gradient(#3b82f6_1px,transparent_1px)] opacity-30 [background-size:16px_16px]"
                >
                </div>
            </div>

            <h3 class="text-2xl font-extrabold text-primary-700">
                Proud Supplier of
            </h3>
            <div class="flex flex-row items-center gap-5 mb-4 md:mb-0">
                <div
                    class="bg-white p-2 rounded-lg shadow-md transform hover:scale-105 transition-all duration-300"
                >
                    <Image
                        src={tradeWindsLogo}
                        alt="Tradewinds Logo"
                        width="250"
                    />
                </div>
            </div>
            <div class="flex flex-wrap justify-center gap-6">
                <div
                    class="bg-gray-50 px-4 py-2 rounded-full border border-gray-200 flex items-center transform hover:scale-105 transition-all hover:bg-primary-50 hover:border-primary-200"
                >
                    <span
                        class="material-symbols-outlined mr-2 text-primary-600"
                        >verified</span
                    >
                    <span class="font-medium">Premium Quality</span>
                </div>
                <div
                    class="bg-gray-50 px-4 py-2 rounded-full border border-gray-200 flex items-center transform hover:scale-105 transition-all hover:bg-primary-50 hover:border-primary-200"
                >
                    <span
                        class="material-symbols-outlined mr-2 text-primary-600"
                        >medical_services</span
                    >
                    <span class="font-medium">Medical Grade</span>
                </div>
                <div
                    class="bg-gray-50 px-4 py-2 rounded-full border border-gray-200 flex items-center transform hover:scale-105 transition-all hover:bg-primary-50 hover:border-primary-200"
                >
                    <span
                        class="material-symbols-outlined mr-2 text-primary-600"
                        >inventory_2</span
                    >
                    <span class="font-medium">Quick Delivery</span>
                </div>
            </div>
        </div>
    </section>
    <!-- Why Choose Us Section -->
    <ParallaxSection
        imageUrl={dnaImage.src}
        overlayColor="bg-primary-700"
        overlayOpacity={0.7}
        class="relative py-24 px-8 overflow-hidden text-neutral-50"
    >
        <div class="relative z-10 max-w-5xl mx-auto">
            <div class="text-center mb-12">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">
                    Why <span class="text-secondary-600 bg-neutral-100 rounded-full px-3">Choose</span> Us?
                </h2>
                <p class="max-w-2xl mx-auto">
                    We bring creativity and innovation to medical equipment
                    supply, going beyond the standard to deliver exceptional
                    solutions.
                </p>
            </div>
            <div class="skew-y-2">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    <div
                        class="bg-white rounded-xl shadow-lg p-6 transform hover:scale-105 transition-all duration-300 hover:shadow-xl"
                    >
                        <div
                            class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mb-6 mx-auto"
                        >
                            <span
                                class="material-symbols-outlined text-3xl text-primary-600"
                                >medical_services</span
                            >
                        </div>
                        <h3 class="text-gray-700 text-xl font-bold text-center mb-3">
                            Healthcare Specialists
                        </h3>
                        <p class="text-gray-600 text-center">
                            We understand the unique needs of medical
                            institutions and provide solutions that enhance
                            patient care.
                        </p>
                    </div>
                    <div
                        class="bg-white rounded-xl shadow-lg p-6 transform hover:scale-105 transition-all duration-300 hover:shadow-xl"
                    >
                        <div
                            class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mb-6 mx-auto"
                        >
                            <span
                                class="material-symbols-outlined text-3xl text-primary-600"
                                >lightbulb</span
                            >
                        </div>
                        <h3 class="text-gray-700 text-xl font-bold text-center mb-3">
                            Creative Approach
                        </h3>
                        <p class="text-gray-600 text-center">
                            We bring fresh ideas to medical equipment supply,
                            making functional solutions also aesthetically
                            pleasing.
                        </p>
                    </div>
                    <div
                        class="bg-white rounded-xl shadow-lg p-6 transform hover:scale-105 transition-all duration-300 hover:shadow-xl"
                    >
                        <div
                            class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mb-6 mx-auto"
                        >
                            <span
                                class="material-symbols-outlined text-3xl text-primary-600"
                                >support_agent</span
                            >
                        </div>
                        <h3 class="text-gray-700 text-xl font-bold text-center mb-3">
                            Exceptional Support
                        </h3>
                        <p class="text-gray-600 text-center">
                            Our team provides comprehensive support from
                            consultation to installation and maintenance.
                        </p>
                    </div>
                </div>
                <div
                    class="mt-16 bg-white rounded-xl group hover:shadow-2xl hover:-translate-y-1 transition-all duration-300 transform shadow-xl overflow-hidden"
                >
                    <div class="flex flex-col md:flex-row">
                        <div class="md:w-1/2 p-8 md:p-12">
                            <!-- <div class="mb-6 inline-block">
                                <span
                                    class="bg-primary-100 text-primary-700 px-4 py-1 rounded-full font-medium"
                                    >Tradewinds Partner</span
                                >
                            </div> -->
                            <div class="w-full flex justify-center mb-2">
                                <Image
                                    src={tradeWindsLogo}
                                    alt="Tradewinds Logo"
                                    width="250"
                                />
                            </div>
                            <h3 class="text-gray-700 text-2xl md:text-3xl font-bold mb-4">
                                Quality Guaranteed with Tradewinds
                            </h3>
                            <p class="text-gray-700 mb-6">
                                As a proud supplier of Tradewinds products, we
                                deliver top-quality medical equipment that meets
                                the highest standards of durability,
                                functionality, and design.
                            </p>
                            <button
                                class="flex items-center font-medium text-primary-600 hover:text-primary-700"
                            >
                                Learn about our partnership <span
                                    class="material-symbols-outlined ml-2 transform group-hover:translate-x-1 transition-transform duration-300"
                                    >arrow_forward</span
                                >
                            </button>
                        </div>
                        <div
                            class="md:w-1/2 bg-primary-600 p-8 md:p-12 text-white relative overflow-hidden"
                        >
                            <div
                                class="absolute top-0 right-0 w-32 h-32 bg-primary-500 rounded-full -translate-y-1/2 translate-x-1/2"
                            >
                            </div>
                            <div
                                class="absolute bottom-0 left-0 w-24 h-24 bg-primary-500 rounded-full translate-y-1/2 -translate-x-1/2"
                            >
                            </div>
                            <div class="relative z-10">
                                <h3 class="text-2xl font-bold mb-4">
                                    Ready to Transform Your Medical Space?
                                </h3>
                                <p class="mb-6 opacity-90">
                                    Contact us today for a consultation and
                                    discover how our solutions can enhance your
                                    healthcare facility.
                                </p>
                                <button
                                    class="bg-secondary-500 hover:bg-secondary-600 text-white px-6 py-2 rounded-full shadow-lg font-medium transition-all duration-300 hover:shadow-xl"
                                >
                                    Request a Consultation
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </ParallaxSection>
</Layout>
